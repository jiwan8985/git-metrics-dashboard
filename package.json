{
  "name": "git-metrics-dashboard",
  "displayName": "Git Metrics Dashboard",
  "description": "개발자별 Git 커밋 통계 및 메트릭 대시보드",
  "version": "0.0.8",
  "publisher": "jiwan-dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/jiwan8985/git-metrics-dashboard.git"
  },
  "bugs": {
    "url": "https://github.com/jiwan8985/git-metrics-dashboard/issues"
  },
  "homepage": "https://github.com/jiwan8985/git-metrics-dashboard#readme",
  "author": {
    "name": "jiwan",
    "email": "jiwan8985@gmail.com"
  },
  "license": "MIT",
  "icon": "images/icon.png",
  "keywords": [
    "git",
    "metrics",
    "dashboard",
    "statistics",
    "commits",
    "analytics",
    "report",
    "export",
    "html",
    "json",
    "csv",
    "markdown",
    "theme",
    "dark",
    "light"
  ],
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:gitMetrics.showDashboard",
    "onCommand:gitMetrics.quickExport",
    "onCommand:gitMetrics.customExport",
    "onCommand:gitMetrics.openReportsFolder",
    "onCommand:gitMetrics.toggleTheme",
    "workspaceContains:.git"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gitMetrics.showDashboard",
        "title": "📊 Git Metrics Dashboard 열기",
        "category": "Git Metrics"
      },
      {
        "command": "gitMetrics.quickExport",
        "title": "📄 빠른 리포트 내보내기",
        "category": "Git Metrics"
      },
      {
        "command": "gitMetrics.customExport",
        "title": "🎯 사용자 정의 리포트 내보내기",
        "category": "Git Metrics"
      },
      {
        "command": "gitMetrics.openReportsFolder",
        "title": "📁 리포트 폴더 열기",
        "category": "Git Metrics"
      },
      {
        "command": "gitMetrics.toggleTheme",
        "title": "🎨 테마 전환",
        "category": "Git Metrics"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "gitMetrics.showDashboard",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "gitMetrics.quickExport",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "gitMetrics.customExport",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "gitMetrics.openReportsFolder",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "gitMetrics.toggleTheme",
          "when": "workspaceFolderCount > 0"
        }
      ],
      "view/title": [
        {
          "command": "gitMetrics.showDashboard",
          "when": "view == explorer",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "gitMetrics.showDashboard",
          "group": "gitmetrics@1"
        },
        {
          "command": "gitMetrics.quickExport",
          "group": "gitmetrics@2"
        },
        {
          "command": "gitMetrics.customExport",
          "group": "gitmetrics@3"
        },
        {
          "command": "gitMetrics.toggleTheme",
          "group": "gitmetrics@4"
        }
      ]
    },
    "configuration": {
      "title": "Git Metrics Dashboard",
      "properties": {
        "gitMetrics.defaultPeriod": {
          "type": "number",
          "default": 30,
          "description": "기본 분석 기간 (일)",
          "minimum": 1,
          "maximum": 365
        },
        "gitMetrics.autoRefresh": {
          "type": "boolean",
          "default": false,
          "description": "자동 새로고침 활성화"
        },
        "gitMetrics.showAuthorStats": {
          "type": "boolean",
          "default": true,
          "description": "작성자별 통계 표시"
        },
        "gitMetrics.maxTopFiles": {
          "type": "number",
          "default": 10,
          "description": "상위 파일 표시 개수",
          "minimum": 5,
          "maximum": 50
        },
        "gitMetrics.theme": {
          "type": "string",
          "enum": [
            "auto",
            "light",
            "dark"
          ],
          "default": "auto",
          "description": "대시보드 테마 설정",
          "enumDescriptions": [
            "VS Code 테마를 따름",
            "라이트 테마 강제 적용",
            "다크 테마 강제 적용"
          ]
        },
        "gitMetrics.export.defaultFormat": {
          "type": "string",
          "enum": [
            "html",
            "json",
            "csv",
            "markdown"
          ],
          "default": "html",
          "description": "기본 리포트 내보내기 형식"
        },
        "gitMetrics.export.includeSummary": {
          "type": "boolean",
          "default": true,
          "description": "리포트에 요약 통계 포함"
        },
        "gitMetrics.export.includeAuthorStats": {
          "type": "boolean",
          "default": true,
          "description": "리포트에 개발자별 통계 포함"
        },
        "gitMetrics.export.includeFileStats": {
          "type": "boolean",
          "default": true,
          "description": "리포트에 파일 타입별 분석 포함"
        },
        "gitMetrics.export.includeTimeAnalysis": {
          "type": "boolean",
          "default": true,
          "description": "리포트에 시간대별 분석 포함"
        },
        "gitMetrics.export.autoOpenAfterExport": {
          "type": "boolean",
          "default": false,
          "description": "내보내기 후 자동으로 파일 열기"
        },
        "gitMetrics.export.customReportsPath": {
          "type": "string",
          "default": "",
          "description": "사용자 정의 리포트 저장 경로 (비어있으면 프로젝트 루트/git-metrics-reports 사용)"
        },
        "gitMetrics.export.useThemeInReports": {
          "type": "boolean",
          "default": true,
          "description": "리포트 생성 시 현재 테마 적용"
        }
      }
    },
    "keybindings": [
      {
        "command": "gitMetrics.showDashboard",
        "key": "ctrl+shift+g ctrl+shift+d",
        "mac": "cmd+shift+g cmd+shift+d",
        "when": "workspaceFolderCount > 0"
      },
      {
        "command": "gitMetrics.quickExport",
        "key": "ctrl+shift+g ctrl+shift+e",
        "mac": "cmd+shift+g cmd+shift+e",
        "when": "workspaceFolderCount > 0"
      },
      {
        "command": "gitMetrics.toggleTheme",
        "key": "ctrl+shift+g ctrl+shift+t",
        "mac": "cmd+shift+g cmd+shift+t",
        "when": "workspaceFolderCount > 0"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^2.19.0"
  }
}